@{
    ViewData["Title"] = "Video Hướng Dẫn";
}
<!-- Main Content -->
<main class="main-content">
    <div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 class="page-title">
                        <i class="fas fa-play-circle me-3"></i>
                        Video Hướng Dẫn
                    </h1>
                    <p class="page-subtitle">Học cách sử dụng PaybackDay hiệu quả nhất</p>
                </div>
            </div>
        </div>

        @* <!-- Featured Video -->
        <div class="featured-video-card mb-5">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <span class="featured-badge">Video Nổi Bật</span>
                    <div class="featured-content">
                        <h3 class="featured-title">Hướng Dẫn Đăng Ký và Kết Nối Sàn Giao Dịch</h3>
                        <p class="featured-description">
                            Tìm hiểu cách đăng ký tài khoản PaybackDay và kết nối với các sàn giao dịch
                            để bắt đầu nhận hoàn tiền ngay hôm nay.
                        </p>
                        <div class="featured-meta">
                            <span><i class="fas fa-clock me-1"></i>8:30</span>
                            <span><i class="fas fa-eye me-1"></i>25K lượt xem</span>
                            <span><i class="fas fa-calendar me-1"></i>2 ngày trước</span>
                        </div>
                        <button class="btn btn-warning btn-lg mt-3" onclick="playFeaturedVideo()">
                            <i class="fas fa-play me-2"></i>Xem Ngay
                        </button>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="featured-thumbnail">
                        <img src="/placeholder.svg?height=250&width=400&text=Featured+Video" alt="Featured Video" class="img-fluid">
                        <div class="play-overlay">
                            <i class="fas fa-play"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div> *@

        @* <!-- Video Categories -->
        <div class="row mb-5">
            <div class="col-md-3 mb-3">
                <div class="category-card" data-category="getting-started">
                    <div class="category-icon">
                        <i class="fas fa-rocket"></i>
                    </div>
                    <div class="category-content">
                        <h5 class="category-title">Bắt Đầu</h5>
                        <p class="category-description">Hướng dẫn cơ bản cho người mới</p>
                        <span class="category-count">8 video</span>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="category-card" data-category="trading">
                    <div class="category-icon">
                        <i class="fas fa-chart-bar"></i>
                    </div>
                    <div class="category-content">
                        <h5 class="category-title">Giao Dịch</h5>
                        <p class="category-description">Kỹ thuật và chiến lược giao dịch</p>
                        <span class="category-count">12 video</span>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="category-card" data-category="withdrawal">
                    <div class="category-icon">
                        <i class="fas fa-money-bill-wave"></i>
                    </div>
                    <div class="category-content">
                        <h5 class="category-title">Rút Tiền</h5>
                        <p class="category-description">Hướng dẫn rút tiền và quản lý ví</p>
                        <span class="category-count">6 video</span>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="category-card" data-category="advanced">
                    <div class="category-icon">
                        <i class="fas fa-cogs"></i>
                    </div>
                    <div class="category-content">
                        <h5 class="category-title">Nâng Cao</h5>
                        <p class="category-description">Tính năng và mẹo nâng cao</p>
                        <span class="category-count">5 video</span>
                    </div>
                </div>
            </div>
        </div> *@

        <!-- Video List -->
        <div class="row" id="">
            @if (ViewBag.Videos != null)
            {
                foreach (var video in ViewBag.Videos)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="video-card fade-in-stagger fade-in-up" style="opacity: 1; transform: translateY(0px); transition: 0.8s ease-out;">
                            <div class="video-thumbnail">
                                <img src="@video.ImgUrl" alt="@video.Title" class="img-fluid">

                                <button type="button" class="play-button" data-bs-toggle="modal" data-bs-target="#videoModal-@video.VideoId">
                                    <i class="fas fa-play"></i>
                                </button>
                                @* <div class="video-duration">8:45</div> *@
                            </div>
                            <div class="video-content">
                                <h5 class="video-title">@video.Title</h5>
                                <p class="video-description">
                                    @video.Description
                                </p>
                                <div class="video-meta d-flex justify-content-between">
                                    <span class="upload-date">@video.UploadDate.ToString("dd/MM/yyyy")</span>
                                </div>
                                <div class="video-tags mt-2">
                                    <span class="badge bg-warning text-dark">@video.Category</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Modal cho video -->
                    <div class="modal fade" id="videoModal-@video.VideoId" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-lg modal-dialog-centered">
                            <div class="modal-content bg-dark">
                                <div class="modal-header border-0">
                                    <h5 class="modal-title text-white">@video.Title</h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Đóng"></button>
                                </div>
                                <div class="modal-body p-0">
                                    <iframe width="100%" height="400"
                                            src="@video.VideoUrl"
                                            frameborder="0" allowfullscreen></iframe>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</main>

<script>
        var modals = document.querySelectorAll('.modal');
    modals.forEach(m => {
        m.addEventListener('hidden.bs.modal', function () {
            let video = m.querySelector('video');
            if(video){
                video.pause();
                video.currentTime = 0;
            }
        });
    });
</script>