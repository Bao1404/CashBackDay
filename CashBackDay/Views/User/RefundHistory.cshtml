@{
    ViewData["Title"] = "Lịch Sử Giao Dịch";
}

<main class="main-content">
    <div class="container">
        <!-- Page Header -->
        <div class="page-header fade-in">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 class="page-title">
                        <i class="fas fa-history text-warning me-3"></i>
                        Lịch sử hoàn tiền
                    </h1>
                    <p class="page-subtitle">Theo dõi lịch sử hoàn tiền của bạn</p>
                </div>
            </div>
        </div>

        <!-- Transaction Table -->
        <div class="data-card fade-in">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-list me-2"></i>Danh sách giao dịch
                </h5>
                    <div class="">
                        <select class="form-select" id="dateRange">
                            <option value="7">7 ngày qua</option>
                            <option value="30" selected>30 ngày qua</option>
                            <option value="90">3 tháng qua</option>
                            <option value="365">1 năm qua</option>
                        </select>
                    </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0" id="transactionTable">
                        <thead class="table-dark">
                            <tr>
                                <th>STT</th>
                                <th>Thời gian</th>
                                <th>Sàn</th>
                                <th>Mã giao dịch</th>
                                <th>Hoàn tiền</th>
                            </tr>
                        </thead>
                        <tbody id="">
                            <tbody id="">
                                @if (ViewBag.History != null)
                                {
                                <tr>
                                    <td>1</td>
                                    <td>
                                        <div class="registration-date">
                                            22-10-2020
                                        </div>
                                    </td>
                                    <td>
                                    </td>
                                    <td>
                                        <code class="transaction-id">GD01</code>
                                    </td>
                                    <td class="text-danger">20</td>
                                    </tr>
                                }
                                else
                                {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">
                                        <i class="fas fa-info-circle me-2"></i>
                                        Không có lịch sử nào
                                    </td>
                                </tr>
                                }
                            </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Pagination -->
        @* <nav aria-label="Transaction pagination" class="mt-4 fade-in">
            <ul class="pagination justify-content-center">
