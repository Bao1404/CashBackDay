<!-- Connect Floor Modal -->
@foreach (var floor in ViewBag.Floors)
{
    <div class="modal fade" id="connectFloorModal-@floor.FloorId" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content custom-modal">
                <div class="modal-header">
                    <h5 class="modal-title">Kết Nối Sàn Giao Dịch</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form method="POST" action="/add-linked-floor" id="connectFloorForm">
                    <input type="text" value="@floor.FloorId" name="floorId" hidden/>
                    <div class="modal-body">
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            Vui lòng nhập UID của bạn bên sàn để kết nối và bắt đầu nhận hoàn tiền.
                        </div>
                        <div class="mb-3">
                            <label for="referralCode" class="form-label">Sàn giao dịch</label>
                            <input type="text" class="form-control custom-input" value="@floor.FloorName" id="floorName" readonly>
                        </div>
                        <div class="mb-3">
                            <label for="userEmail" class="form-label">UID của bạn tại @floor.FloorName</label>
                            <input type="text" class="form-control custom-input" name="uid" required>
                        </div>
                        @* <div class="mb-3">
                            <label for="userPhone" class="form-label">Email đăng nhập của bạn</label>
                            <input type="email" class="form-control custom-input" id="email" required>
                        </div> *@
                    </div>
                    <div class="p-3" style="text-align:end;">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-success">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

