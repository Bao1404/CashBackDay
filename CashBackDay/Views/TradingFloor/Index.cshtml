@{
    ViewData["Title"] = "Sàn Giao Dịch";
}
<!-- Main Content -->
<main class="main-content">
    <div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 class="page-title">
                        <i class="fas fa-building me-3"></i>
                        Sàn Giao Dịch Đối Tác
                    </h1>
                    <p class="page-subtitle">Kết nối với các sàn giao dịch uy tín để nhận hoàn tiền</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="d-flex gap-2 justify-content-md-end">
                        <select class="form-select filter-select" id="sortBy">
                            <option value="refund">Sắp xếp theo % hoàn tiền</option>
                            <option value="name">Sắp xếp theo tên</option>
                            <option value="rating">Sắp xếp theo đánh giá</option>
                        </select>
                        <div class="btn-group" role="group">
                            <input type="radio" class="btn-check" name="viewMode" id="gridView" checked>
                            <label class="btn btn-outline-warning" for="gridView">
                                <i class="fas fa-th"></i>
                            </label>
                            <input type="radio" class="btn-check" name="viewMode" id="listView">
                            <label class="btn btn-outline-warning" for="listView">
                                <i class="fas fa-list"></i>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filter Section -->
        <div class="data-card mb-4">
            <div class="card-body">
                <div class="row align-items-center" style="padding: 15px;">
                    <div class="col-md-3">
                        <label class="form-label">Loại Sàn</label>
                        <select class="form-select custom-input" id="floorTypeFilter">
                            <option value="">Tất cả</option>
                            <option value="stock">Chứng khoán</option>
                            <option value="crypto">Tiền điện tử</option>
                            <option value="forex">Forex</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">% Hoàn tiền tối thiểu</label>
                        <select class="form-select custom-input" id="refundFilter">
                            <option value="">Tất cả</option>
                            <option value="50">Từ 50%</option>
                            <option value="60">Từ 60%</option>
                            <option value="70">Từ 70%</option>
                            <option value="80">Từ 80%</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Tìm kiếm</label>
                        <div class="search-box">
                            <i class="fas fa-search"></i>
                            <input type="text" class="form-control custom-input" id="searchInput" placeholder="Tìm kiếm sàn giao dịch...">
                        </div>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">&nbsp;</label>
                        <button class="btn btn-warning w-100" onclick="applyFilters()">
                            <i class="fas fa-search"></i> Lọc
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Trading Floors Grid -->
        @* <div id="tradingFloorsContainer" class="row"> *@
        <div id="" class="row">
            <!-- Trading floor cards will be populated by JavaScript -->
            @if (ViewBag.TradingFloors != null)
            {
                foreach (var floor in ViewBag.TradingFloors)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="trading-floor-card">
                            <div class="card-image">
                                <img src="@floor.ImgUrl" alt="VPS Securities" class="img-fluid">
                                <div class="refund-badge">
                                    @{
                                        if (floor.RefundPercentage != null)
                                        {
                                            var value = (decimal)floor.RefundPercentage;
                                            string display = value % 1 == 0
                                            ? value.ToString("0")       // không có số lẻ thì hiển thị số nguyên
                                            : value.ToString("0.##");   // có số lẻ thì hiển thị tối đa 2 chữ số thập phân
                                                                        @($"{display}% Hoàn Tiền")
                                        }
                                    }
                                </div>
                            </div>
                            <div class="card-content">
                                <h5 class="card-title">@floor.FloorName</h5>
                                <p class="card-subtitle">Mã giới thiệu: @floor.InviteCode</p>

                                @* <div class="floor-stats mb-3">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="stat-label">Đánh giá:</span>
                                        <div class="rating-stars">
                                            <i class="fas fa-star text-warning"></i><i class="fas fa-star text-warning"></i><i class="fas fa-star text-warning"></i><i class="fas fa-star text-warning"></i><i class="fas fa-star-half-alt text-warning"></i>
                                            <small class="ms-1">(4.8)</small>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="stat-label">Người dùng:</span>
                                        <span class="stat-value">12.500</span>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="stat-label">Nạp tối thiểu:</span>
                                        <span class="stat-value text-success">100.000&nbsp;₫</span>
                                    </div>
                                </div> *@

                                <div class="floor-actions d-flex gap-2">
                                    <a href="@floor.FloorUrl" target="_blank" class="btn btn-warning flex-fill">
                                        <i class="fas fa-link me-1"></i>Kết Nối
                                    </a>
                                    <button class="btn btn-outline-warning">
                                        <i class="fas fa-info-circle"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

        <!-- Pagination -->
        <nav aria-label="Trading floors pagination" class="mt-4">
            <ul class="pagination justify-content-center" style="gap: 10px;">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Trước</a>
                </li>
                <li class="page-item active">
                    <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">2</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">3</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">Sau</a>
                </li>
            </ul>
        </nav>
    </div>
</main>

<!-- Trading Floor Detail Modal -->
<div class="modal fade" id="floorDetailModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content custom-modal">
            <div class="modal-header">
                <h5 class="modal-title" id="floorDetailTitle">Chi Tiết Sàn Giao Dịch</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="floorDetailBody">
                <!-- Content will be populated by JavaScript -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-warning" id="connectFloorBtn">Kết Nối Ngay</button>
            </div>
        </div>
    </div>
</div>

<!-- Connect Floor Modal -->
<div class="modal fade" id="connectFloorModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content custom-modal">
            <div class="modal-header">
                <h5 class="modal-title">Kết Nối Sàn Giao Dịch</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    Vui lòng nhập mã giới thiệu để kết nối với sàn giao dịch và bắt đầu nhận hoàn tiền.
                </div>
                <form id="connectFloorForm">
                    <div class="mb-3">
                        <label for="referralCode" class="form-label">Mã Giới Thiệu</label>
                        <input type="text" class="form-control custom-input" id="referralCode" readonly>
                    </div>
                    <div class="mb-3">
                        <label for="userEmail" class="form-label">Email Của Bạn</label>
                        <input type="email" class="form-control custom-input" id="userEmail" required>
                    </div>
                    <div class="mb-3">
                        <label for="userPhone" class="form-label">Số Điện Thoại</label>
                        <input type="tel" class="form-control custom-input" id="userPhone" required>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="agreeTerms" required>
                        <label class="form-check-label" for="agreeTerms">
                            Tôi đồng ý với <a href="#" class="text-warning text-decoration-none">điều khoản sử dụng</a>
                        </label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-success" onclick="connectToFloorProcess()">Xác Nhận Kết Nối</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/trading-floors.js"></script>