    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="site.js"></script>
    <script src="admin.js"></script>

    <script>
        // Mobile sidebar toggle
        document.getElementById('sidebarToggle')?.addEventListener('click', function() {
            document.getElementById('adminSidebar').classList.toggle('show');
        });

        // Number animation for revenue cards
        function animateNumbers() {
            const cards = document.querySelectorAll('.card-number[data-target]');
            cards.forEach(card => {
                const target = parseInt(card.getAttribute('data-target'));
                const increment = target / 100;
                let current = 0;

                const timer = setInterval(() => {
                    current += increment;
                    if (current >= target) {
                        current = target;
                        clearInterval(timer);
                    }

                    if (target >= 1000000000) {
                        card.textContent = (current / 1000000000).toFixed(1) + ' Tỷ VNĐ';
                    } else if (target >= 1000000) {
                        card.textContent = (current / 1000000).toFixed(0) + 'M VNĐ';
                    } else {
                        card.textContent = current.toLocaleString('vi-VN') + ' VNĐ';
                    }
                }, 20);
            });
        }

        // Initialize animations when page loads
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(animateNumbers, 500);
        });

        // Refresh dashboard function
        function refreshDashboard() {
            const btn = event.target.closest('button');
            const icon = btn.querySelector('i');

            icon.classList.add('fa-spin');
            btn.disabled = true;

            setTimeout(() => {
                icon.classList.remove('fa-spin');
                btn.disabled = false;
                animateNumbers();
            }, 2000);
        }
    </script>
