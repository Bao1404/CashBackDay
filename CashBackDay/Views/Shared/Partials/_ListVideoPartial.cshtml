@using CashBackObject.Models

@{
    var videos = ViewBag.Videos as List<Video> ?? new List<Video>();
}

@if (videos.Any())
{
    @foreach (var video in videos)
    {
        <tr>
            <td>
                <div class="d-flex align-items-center">
                    <img src="@video.ImgUrl" alt="@video.Title" class="platform-logo me-3" style="width: 40px; height: 40px;">
                    <div>
                        <div class="platform-name fw-bold">@video.Title</div>
                    </div>
                </div>
            </td>
            <td>
                <span class="platform-name">@video.Category</span>
            </td>
            <td class="text">@video.Description</td>
            <td class="text">@video.UploadDate?.ToString("dd/MM/yyyy")</td>
            <td class="text">@video.ImgUrl</td>
            <td>
                <div class="btn-group" role="group">
                    <button class="btn btn-sm btn-outline-warning" data-bs-toggle="modal" data-bs-target="#editVideoModal-@video.VideoId" title="Chỉnh sửa">
                        <i class="fas fa-edit"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteVideoModal-@video.VideoId" title="Xóa">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="5" class="text-center text-muted py-4">
            <i class="fas fa-info-circle me-2"></i>
            Không có video nào
        </td>
    </tr>
}

