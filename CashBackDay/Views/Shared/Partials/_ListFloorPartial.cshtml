@using CashBackObject.Models
    
@{
    var floors = ViewBag.Floors as List<TradingFloor> ?? new List<TradingFloor>();
}

@if (floors.Any())
{
    @foreach (var floor in floors)
    {
        <tr>
            <td>
                <div class="d-flex align-items-center">
                    <img src="@floor.ImgUrl" alt="@floor.FloorName" class="platform-logo me-3" style="width: 40px; height: 40px;">
                    <div>
                        <div class="platform-name fw-bold">@floor.FloorName</div>
                    </div>
                </div>
            </td>
            <td>
                <span class="platform-name">@floor.InviteCode</span>
            </td>
            <td class="text-success fw-bold">@(floor.RefundPercentage?.ToString("0.##"))%</td>
            <td class="text">@floor.AddedDate?.ToString("dd/MM/yyyy")</td>
            <td>
                <div class="btn-group" role="group">
                    <button class="btn btn-sm btn-outline-warning" data-bs-toggle="modal" data-bs-target="#editPlatformModal-@floor.FloorId" title="Chỉnh sửa">
                        <i class="fas fa-edit"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deletePlatformModal-@floor.FloorId" title="Xóa">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="5" class="text-center text-muted py-4">
            <i class="fas fa-info-circle me-2"></i>
            Không có sàn giao dịch nào
        </td>
    </tr>
}

